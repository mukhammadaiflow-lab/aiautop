# AI Automation Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://platform:secretpassword@localhost:5432/ai_automation"
POSTGRES_USER=platform
POSTGRES_PASSWORD=secretpassword
POSTGRES_DB=ai_automation

# ===========================================
# REDIS
# ===========================================
REDIS_URL="redis://:redispassword@localhost:6379"
REDIS_PASSWORD=redispassword

# ===========================================
# SECURITY
# ===========================================
# IMPORTANT: Change these in production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"
ENCRYPTION_KEY="32-byte-encryption-key-here!!!!"
SESSION_SECRET="session-secret-change-in-production"

# ===========================================
# SERVER
# ===========================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# AI PROVIDERS
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=sk-your-anthropic-api-key

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM=noreply@yourplatform.com
EMAIL_FROM_NAME="AI Automation Platform"

# ===========================================
# SMS (Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SLACK
# ===========================================
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ===========================================
# GITHUB
# ===========================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# ===========================================
# STRIPE (PAYMENTS)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ===========================================
# AWS
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ===========================================
# GOOGLE
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account",...}'

# ===========================================
# MICROSOFT
# ===========================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# ===========================================
# SALESFORCE
# ===========================================
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_INSTANCE_URL=https://yourorg.salesforce.com

# ===========================================
# OBSERVABILITY
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_ASSISTANT=true
ENABLE_COLLABORATION=true
ENABLE_TEMPLATES=true
ENABLE_BILLING=false
ENABLE_SSO=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FILE STORAGE
# ===========================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
MAX_FILE_SIZE_MB=10
